{
  "name": "todos",
  "description": "Getting things done",
  "version": "0.0.2",
  "skill": {
    "namespace": "todos"
  },
  "homepage": "https://github.com/[YOUR REPO PATH]",
  "bugs": {
    "url": "https://github.com/[YOUR REPO PATH]/issues"
  },
  "keywords": [],
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "yarn build.tsc && yarn build.resolve-paths",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "heroku-postbuild": "yarn build.dev",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/data-stores": "^18.1.98",
    "@sprucelabs/error": "^5.0.523",
    "@sprucelabs/heartwood-view-controllers": "^91.5.0",
    "@sprucelabs/mercury-client": "^31.0.250",
    "@sprucelabs/mercury-core-events": "^12.2.69",
    "@sprucelabs/mercury-types": "^35.0.195",
    "@sprucelabs/schema": "^28.5.35",
    "@sprucelabs/spruce-core-schemas": "^34.2.149",
    "@sprucelabs/spruce-event-plugin": "^50.0.18",
    "@sprucelabs/spruce-event-utils": "^27.0.229",
    "@sprucelabs/spruce-skill-booter": "^50.0.18",
    "@sprucelabs/spruce-skill-utils": "^26.4.131",
    "@sprucelabs/spruce-store-plugin": "^50.0.18",
    "@sprucelabs/spruce-view-plugin": "^35.0.31",
    "dotenv": "^16.0.3",
    "globby": "^11.0.4"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^6.0.492",
    "@sprucelabs/jest-sheets-reporter": "^1.3.124",
    "@sprucelabs/resolve-path-aliases": "^1.1.111",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/spruce-test-fixtures": "^50.0.18",
    "@sprucelabs/test-utils": "^3.2.24",
    "@types/node": "^18.8.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "eslint-config-spruce": "^10.11.4",
    "jest": "^29.1.2",
    "jest-circus": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1a15rdbHtpQH9roOhYC6_7fczQU4jeVwM2SBtuIpQCP0",
          "worksheetId": 0,
          "testMap": {
            "newRowRendersAddButton": "B2",
            "hittingEnterInNewInputAddsRow": "B3",
            "pressingAddWithoutTodoDoesNotAdd": "B4",
            "todoRowHasDeleteButton": "B7",
            "addedTodoRowHasCheckbox": "B8",
            "pressingEnterDoesNotAddRowIfNoTodo": "B16",
            "addListenerReturnsSavedRecord": "E2",
            "addingTodoEmitsAddEvent": "E3"
          }
        }
      ]
    ]
  }
}
